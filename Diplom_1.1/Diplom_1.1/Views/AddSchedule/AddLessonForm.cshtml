@model Diplom_1._1.ViewModels.AddLessonFormViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Додати</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="panel-heading text-center">
            <h4>Додати пару</h4>
        </div>
        <div class="text-center">
            @using(Html.BeginForm())
            {


                DateTime start = ViewBag.Date;
                int range = (new DateTime(2017, 6, 30) - start).Days;
                TimeSpan ts = new TimeSpan(8, 30, 0);
                start = start.AddDays(ViewBag.Day);
                //start = start.Date + ts;

                <div>
                    <div class="form-group">
                        <label>Час</label>
                        @Html.TextBoxFor(x => x.Lesson.time, "{HH:mm}", new { @class = "form-control" }) @*// TODO -sec*@
                        Формат дати: 16:00:00  {dd.MM.yyyy HH.mm}
                        @start
                        @Html.HiddenFor(x => x.FineDate, new { @Value = start.ToString()})

                    </div>
                    <div class="form-group">
                        <label>Назва предмету</label>
                        @Html.TextBoxFor(x => x.Lesson.name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Викладач</label> @*TODO нормальные списки преподов и т.д.*@
                        @Html.TextBoxFor(x => x.Lesson.prof, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Аудиторія</label>
                        @Html.TextBoxFor(x => x.Lesson.room, new { @class = "form-control" })
                    </div>
                </div>


                <div class="text-center">
                    <input type="button"
                           value="Повернутись"
                           onclick="window.location.href='@Url.Action("Index", "AddSchedule")';" class="btn btn-success" />
                    <input type="submit" value="Додати лекцію" class="btn btn-success text-right" />
                </div>
            }
        </div>
    </div>
</body>
</html>

